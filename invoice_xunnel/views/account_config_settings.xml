<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_config_settings_xunnel_invoice" model="ir.ui.view">
        <field name="name">view_account_config_settings_xunnel</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id = 'xunnel_token']" position="inside">
                <label for="xunnel_last_sync"/>
                <field name="xunnel_last_sync"/>
                <button name="sync_xunnel_attachments" type="object">
                    <i class="fa fa-refresh fa-fw"></i> Sync attachments
                </button>
                <div class="text-muted" id="xunnel_last_sync_help">SAT's invoices olders than this date won't be fetched. 
                </div>
            </xpath>
        </field>
    </record>
</odoo>
