<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_config_settings_xunnel" model="ir.ui.view">
        <field name="name">view_account_config_settings_xunnel</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id = 'bank_cash']" position="after">
                <h2>Xunnel Configuration</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-12 o_setting_box" groups="account.group_account_user">
                        <div class="o_setting_right_pane">
                            <label for="xunnel_token"/>
                            <field name="xunnel_token"/>
                            <button name="sync_xunnel_providers" type="object">
                                <i class="fa fa-refresh fa-fw"></i> Sync providers &amp; journals
                            </button>
                            <div class="text-muted" id="xunnel_token_help">User's private token authentication
                            </div>
                            <label for="xunnel_last_sync"/>
                            <field name="xunnel_last_sync"/>
                            <button name="sync_xunnel_attachments" type="object">
                                <i class="fa fa-refresh fa-fw"></i> Sync attachments
                            </button>
                            <div class="text-muted" id="xunnel_last_sync_help">SAT's invoices olders than this date won't be fetched. 
                            </div>
                            <label for="xunnel_testing"/>
                            <field name="xunnel_testing"/>
                            <div class="text-muted" id="xunnel_testing_help">Enable/Disable Xunnel Test Environment.
                            </div> 
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
