<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_pre_invoice_wizard" model="ir.ui.view">
        <field name="name">Pre Invoice</field>
        <field name="model">account.pre.invoice.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field create="false" name="journal_id" options="{'editable': True, 'no_create': True}"/>
                            <field invisible="1" name="invisible_account"/>
                            <field attrs="{'invisible':[('invisible_account','=', False)]}" name="account_id"/>
                        </group>
                        <group>
                            <field name="invisible_account_analytic" invisible="1" />
                            <field attrs="{'invisible':[('invisible_account_analytic','=',False)]}" groups="analytic.group_analytic_accounting" name="account_analytic_id"/>
                            <field name="invisible_account_analytic_tag" invisible="1" />
                            <field attrs="{'invisible':[('invisible_account_analytic_tag','=',False)]}" groups="analytic.group_analytic_accounting" name="analytic_tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button class="oe_highlight" name="create_invoices" string="Create Invoice" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_account_pre_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Pre Invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.pre.invoice.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <act_window id="action_account_pre_invoice_wizard" key2="client_action_multi" name="Create Invoices" res_model="account.pre.invoice.wizard" src_model="account.pre.invoice" target="new" view_mode="form"/>
</odoo>
