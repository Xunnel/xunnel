<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pre_invoice_link_wizard_form" model="ir.ui.view">
        <field name="name">pre.invoice.link.wizard.form</field>
        <field name="model">pre.invoice.link.wizard</field>
        <field name="arch" type="xml">
            <form string="Pre Invoice Link">
                <sheet>
                    <group>
                        <field name="uuid_pre_invoice"/>
                        <field name="pre_invoice_data" attrs="{'invisible': [('uuid_pre_invoice', '=', False)]}"/>
                    </group>
                </sheet>
                <footer>
                    <button class="oe_highlight" name="link_pre_invoice" string="Link Pre Invoice" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_pre_invoice_link_wizard" model="ir.actions.act_window">
        <field name="name">Pre Invoice Link</field>
        <field name="res_model">pre.invoice.link.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="pre_invoice_link_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
